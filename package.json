{
  "name": "savorswipe",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "workspaces": ["frontend"],
  "scripts": {
    "start": "cp .env frontend/.env 2>/dev/null || true; cd frontend && expo start",
    "reset-project": "node ./frontend/scripts/reset-project.js",
    "android": "cp .env frontend/.env 2>/dev/null || true; cd frontend && expo start --android",
    "ios": "cp .env frontend/.env 2>/dev/null || true; cd frontend && expo start --ios",
    "web": "cp .env frontend/.env 2>/dev/null || true; cd frontend && expo start --web",
    "test": "jest",
    "test:backend": "PYTHONPATH=backend pytest tests/backend -v --tb=short",
    "lint": "cd frontend && expo lint && npx tsc --noEmit",
    "lint:backend": "cd backend && uvx ruff check .",
    "check": "npm run lint && npm run lint:backend && jest --passWithNoTests --no-watch --ci --runInBand --forceExit && npm run test:backend",
    "deploy": "node ./frontend/scripts/deploy.js",
    "sitemap": "node ./frontend/scripts/generate-sitemap.js",
    "sitemap:api": "node ./frontend/scripts/generate-sitemap.js --api"
  },
  "jest": {
    "preset": "jest-expo",
    "roots": [
      "<rootDir>/frontend",
      "<rootDir>/tests"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(?:jest-)?react-native|@react-native(?:-community)?|expo(?:nent)?|@expo(?:nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/tests/backend/"
    ],
    "setupFiles": [
      "<rootDir>/frontend/jest.mocks.js"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect",
      "<rootDir>/frontend/jest.setup.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/frontend/$1"
    }
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@modelcontextprotocol/sdk": "^1.20.1",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/native": "^7.1.21",
    "aws-sdk": "^2.1691.0",
    "dotenv": "^16.4.5",
    "expo": "^54.0.25",
    "expo-constants": "~18.0.10",
    "expo-crypto": "^15.0.7",
    "expo-document-picker": "^14.0.7",
    "expo-file-system": "^19.0.17",
    "expo-font": "~14.0.9",
    "expo-image-manipulator": "~14.0.7",
    "expo-image-picker": "~17.0.8",
    "expo-linking": "~8.0.9",
    "expo-router": "~6.0.15",
    "expo-splash-screen": "~31.0.11",
    "expo-status-bar": "~3.0.8",
    "expo-system-ui": "~6.0.8",
    "expo-web-browser": "~15.0.9",
    "pdf-lib": "^1.17.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-native": "^0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "^0.21.2",
    "react-native-worklets": "^0.5.1",
    "react-native-worklets-core": "^1.6.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@eslint/js": "^9.38.0",
    "@testing-library/jest-native": "^5.4.0",
    "@testing-library/react-native": "^12.0.0",
    "@types/jest": "^29.5.12",
    "@types/react": "~19.1.10",
    "@types/react-test-renderer": "^18.0.7",
    "eslint": "^9.38.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "jest": "^29.2.1",
    "jest-expo": "~54.0.13",
    "react-test-renderer": "^19.1.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.46.1"
  },
  "private": true
}
