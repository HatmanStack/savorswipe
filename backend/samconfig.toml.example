# SAM Configuration File
# Copy this to samconfig.toml and fill in your values
# cp samconfig.toml.example samconfig.toml

version = 0.1

[default.deploy.parameters]
stack_name = "savorswipe-backend"
region = "us-west-2"
capabilities = "CAPABILITY_IAM"
confirm_changeset = true
resolve_s3 = true

# Parameter overrides (fill in your actual values)
parameter_overrides = [
    "OpenAIApiKey=YOUR_OPENAI_API_KEY",
    "GoogleSearchId=YOUR_GOOGLE_SEARCH_ID",
    "GoogleSearchKey=YOUR_GOOGLE_SEARCH_KEY",
    "S3BucketName=YOUR_S3_BUCKET_NAME"
]

[default.build.parameters]
# Set to true if you have Docker and want Lambda-compatible builds
# Set to false to build locally (faster but may have compatibility issues)
use_container = false

